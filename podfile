platform :ios, '11.0'

use_modular_headers!

target 'Swift-DXKT' do


# 网络请求
	pod 'Alamofire'
	pod 'Moya'
	pod 'ReachabilitySwift', '5.0.0'

# data转json
	pod 'SwiftyJSON'
	pod 'HandyJSON'

# 下载和缓存网络图片
	pod 'Kingfisher'   
# 布局
	pod 'SnapKit'
# RxSwift
	pod 'RxSwift', '6.5.0'
	pod 'RxCocoa', '6.5.0'
	pod "RxGesture"		#手势
# 其他
	pod 'JFPopup', '1.5.0'      # 弹框组合 适配灵动岛
	pod 'CryptoSwift', '~> 1.6.0' #加解密
	pod 'SwiftyUserDefaults', '~> 5.0' #管理本地数据
	pod 'DeviceKit', '~> 4.0'	#设备类型
	#pod 'SwiftLint'			#代码规范
	pod 'Lantern', '~> 1.1.3'		#图片浏览器
	pod 'Starscream', '~> 4.0.0'		#webSocket
	pod 'IQKeyboardManagerSwift', '6.3.0'	#键盘管理
      
end
